<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- White Button Styles -->
    <style name="whiteButton">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- End White Button Styles -->

    <!-- Red Button Styles -->
    <style name="redButton">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="backgroundTint">@color/main_red</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- End Red Button Styles -->

    <!-- Edit Text Styles -->
    <style name="CustomBoldEditText">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_m</item>
    </style>
    <!-- End Edit Text Styles -->

    <!-- White Text Styles -->
    <style name="whiteBoldText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="whiteMediumText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="whiteRegularText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <!-- End White Text Styles -->

    <!-- Black Text Styles -->
    <style name="blackBoldText">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="blackMediumText">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="blackRegularText">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <!-- End Black Text Styles -->

    <!-- Black Text Styles -->
    <style name="redBoldText">
        <item name="android:textColor">@color/main_red</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="redMediumText">
        <item name="android:textColor">@color/main_red</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="redRegularText">
        <item name="android:textColor">@color/main_red</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <!-- End Black Text Styles -->

</resources>